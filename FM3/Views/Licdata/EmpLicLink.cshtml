@if (TempData["Message"] != null)
{
    <div class="alert alert-danger" id="success-alert">
        <strong>@TempData["Message"]</strong>
    </div>
}


<div id="SearchResultSection">
    <br />

    @if (ViewBag.SearchResult != null)
    {
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>工號</th>
                    <th>姓名</th>
                    <th>證照代碼</th>
                    <th>證照名稱</th>
                    <th>證照字號</th>
                    <th>證照取得日期</th>
                    <th>是否指定</th>
                    <th>是否為講師</th>
                    <th>是否結業</th>
                    <th>結業號碼</th>
                    <th>最近複訓日期</th>
                    <th>建立者</th>
                    <th>建立日</th>
                    <th>更新者</th>
                    <th>更新日</th>
                    <th>功能</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in (List<FM3.Models.LicLinkViewModel>)ViewBag.SearchResult)
                {
                    <tr>
                        <td>@item.EMP_ID</td>
                        @*<td>@item.NAME1</td>*@
                        <td>@item.EMP_NAME</td>
                        <td>@item.LIC_CD</td>
                        <td>@item.LIC_NO</td>
                        <td>@item.LIC_DATE</td>
                        @if (item.IS_ASSIGN == "1")
                        {
                            item.IS_ASSIGN = "是";
                        }
                        else
                        {
                            item.IS_ASSIGN = "否";
                        }
                        <td>@item.IS_ASSIGN</td>
                        @if (item.IS_TEACHER == "1")
                        {
                            item.IS_TEACHER = "是";
                        }
                        else
                        {
                            item.IS_TEACHER = "否";
                        }
                        <td>@item.IS_TEACHER</td>
                        @if (item.IS_GRD == "1")
                        {
                            item.IS_GRD = "是";
                        }
                        else
                        {
                            item.IS_GRD = "否";
                        }
                        <td>@item.IS_GRD</td>
                        <td>@item.GRD_NO</td>
                        <td>@item.RE_LIC_DATE</td>
                        <td>@item.CREATED_BY</td>
                        <td>@item.CREATED_DT</td>
                        <td>@item.UPDATED_BY</td>
                        <td>@item.UPDATED_DT</td>

                        <td>
                            <button type="button" class="btn btn-success" data-toggle="ajax-modal" data-target="#EditLic" data-url="@Url.Action($"EditEmpLicLink/?empid={item.EMP_ID}")">
                                編輯
                            </button>
                            @using (Html.BeginForm("DelEmpLicLink", "Licdata", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" name="key" value="@item.PK_NO" class="btn  btn-danger" onclick="return confirm('確定刪除?')">刪除</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<div id="ModalArea"></div>
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            var ModalArea = $('#ModalArea');
            $('button[data-toggle="ajax-modal"]').click(function () {
                var ddlValue = "";
                var url = $(this).data('url');
                if ($(this).is('[data-target~="#NewLic"]')) {
                    ddlValue = $('#ddl').val();
                    url = url + "/?selectstr=" + ddlValue;
                }
                var decodedUrl = decodeURIComponent(url);
                $.get(decodedUrl).done(function (data) {
                    ModalArea.html(data);
                    ModalArea.find('.modal').modal('show');
                });
            })

            ModalArea.on('click', '[data-save="modal"]', function (event) {
                var form = $(this).parents('.modal').find('form');
                var actionUrl = form.attr('action');
                var sendData = form.serialize();
                $.post(actionUrl, sendData).done(function (data) {
                    ModalArea.find('.modal').modal('hide');
                    location.reload();
                })
            })
            $(".alert").fadeTo(4000, 500).slideUp(500, function () {
                $(".alert").slideUp(500);
            });


        })

    </script>
}